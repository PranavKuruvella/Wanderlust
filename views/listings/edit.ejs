<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="edit-container">
            <h3 class="edit-title">Edit your Listing!</h3>
            <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" class="needs-validation edit-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" required name="listing[title]" class="form-control" value="<%= listing.title%>">
                    <div class="valid-feedback">
                        Looks Perfect!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid Title.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" required class="form-control" name="listing[description]" rows="4"><%= listing.description%></textarea>
                     <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    <div class="current-image-container">
                        <img src="<%= originalImagUrl%>" alt="Current listing image" class="current-image">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input
                    type="file"
                    class="form-control"
                    name="listing[image]"
                    accept="image/*">
                    <div class="invalid-feedback">
                        Please select a valid image file.
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-12 col-md-4">
                        <label for="price" class="form-label">Price (INR)</label>
                        <input type="number" required class="form-control" name="listing[price]" value="<%= listing.price%>">
                        <div class="invalid-feedback">
                            Please Enter valid Price.
                        </div>
                    </div>
                    <div class="mb-3 col-12 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text"  required class="form-control" name="listing[location]" value="<%= listing.location%>">
                        <div class="invalid-feedback">
                            Please choose a valid Location.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" required class="form-control" name="listing[country]" value="<%= listing.country%>">
                    <div class="invalid-feedback">
                        Please choose a valid Country.
                    </div>
                </div>

                <button type="submit" class="btn btn-dark w-100">Update Listing</button>
            </form>
        </div>
    </div>
</div>
