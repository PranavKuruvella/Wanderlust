<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="edit-container">
            <h3 class="edit-title">Create New Listing</h3>
            <form method="POST" action="/listings" class="needs-validation edit-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Perfect!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid Title.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control" rows="4" placeholder="Enter description" required></textarea>
                    <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>
                <!--  image file upload ki -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input type="file" name="listing[image]" class="form-control" accept="image/*" required>
                    <div class="invalid-feedback">
                        Please enter valid image.
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-12 col-md-4">
                        <label for="price" class="form-label">Price (INR)</label>
                        <input type="number" name="listing[price]" class="form-control" placeholder="Enter price" required>
                        <div class="invalid-feedback">
                            Please Enter valid Price.
                        </div>
                    </div>
                    <div class="mb-3 col-12 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="listing[location]" placeholder="Enter location" required>
                        <div class="invalid-feedback">
                            Please choose a valid Location.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" name="listing[country]" placeholder="Enter country" required>
                    <div class="invalid-feedback">
                        Please choose a valid Country.
                    </div>
                </div>
                <button type="submit" class="btn btn-dark w-100">Add Listing</button>
            </form>
        </div>
    </div>
</div>